<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    tools:context="com.pacho.android.calq.MainActivityFragment">

    <TextView style="@style/AppTheme.Result"
        android:text="0"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"
        android:id="@+id/displayView"
        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:columnCount="4"

        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">


        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_seven"
            android:text="7"
            android:onClick="numberPressed"
            android:tag="7"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_eight"
            android:text="8"
            android:onClick="numberPressed"
            android:tag="8"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_nine"
            android:text="9"
            android:onClick="numberPressed"
            android:tag="9"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_divide"
            android:text="/"
            android:onClick="operationPressed"
            android:tag="/"
            />

        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_four"
            android:text="4"
            android:onClick="numberPressed"
            android:tag="4"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_five"
            android:text="5"
            android:onClick="numberPressed"
            android:tag="5"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_six"
            android:text="6"
            android:onClick="numberPressed"
            android:tag="6"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_multiply"
            android:text="*"
            android:onClick="operationPressed"
            android:tag="*"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_one"
            android:text="1"
            android:onClick="numberPressed"
            android:tag="1"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_two"
            android:text="2"
            android:onClick="numberPressed"
            android:tag="2"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_three"
            android:text="3"
            android:onClick="numberPressed"
            android:tag="3"
            />

        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_less"
            android:text="-"
            android:onClick="operationPressed"
            android:tag="-"
            />

        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_zero"
            android:text="0"
            android:onClick="numberPressed"
            android:tag="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_comma"
            android:text=","
            android:tag=","
            android:onClick="commaPressed"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_plus"
            android:text="+"
            android:onClick="operationPressed"
            android:tag="+"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_backspace"
            android:text="â—€"
            android:paddingRight="18dp"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_equals"
            android:text="="
            android:onClick="equalsPressed"
            android:layout_columnSpan="2"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_c"
            android:text="C"
            android:onClick="cPressed"
            />

    </GridLayout>


</RelativeLayout>