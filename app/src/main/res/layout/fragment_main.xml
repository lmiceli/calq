<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_main"
    tools:context="com.pacho.android.calq.MainActivityFragment">

    <TextView style="@style/AppTheme.Result"
        android:text="0"
        android:layout_alignParentEnd="true"
        android:textAlignment="viewEnd"
        android:id="@+id/textView"
        />
<!-- TODO: FOR SOME REASON I CANT MAKE THE FIFTH COLUMN TO SHOW WELL-->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:columnCount="5"
        android:rowCount="4"
        android:id="@+id/gridLayout">


        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_seven"
            android:text="7"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_eight"
            android:text="8"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_nine"
            android:text="9"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_divide"
            android:text="/"
            android:layout_gravity="center|left"
            android:layout_width="wrap_content" />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_percent"
            android:text="%"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_four"
            android:text="4"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_five"
            android:text="5"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_six"
            android:text="6"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_multiply"
            android:text="*"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_inverse"
            android:text="1/x"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_one"
            android:text="1"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_two"
            android:text="2"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_three"
            android:text="3"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_less"
            android:text="-"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_equals"
            android:text="="
            android:layout_rowSpan="2"
            android:layout_gravity="fill"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_zero"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_dot"
            android:text="."
            />
        <Button style="@style/AppTheme.CalculatorButton"
            android:id="@+id/button_plus"
            android:text="+"
            />

        <TextView
            android:width="1dp"
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:width="1dp"
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:width="1dp"
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="New Text"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="New Text"
            android:layout_alignParentStart="true" />

    </GridLayout>


</RelativeLayout>