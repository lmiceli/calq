<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <gradient
        android:startColor="@color/result_display_background_start"
        android:centerColor="@color/result_display_background_center"
        android:endColor="@color/result_display_background_end"
        android:angle="90">
    </gradient>



    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/result_display_border" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="2dp"   >
    </corners>

</shape>